<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    <ImageView android:src="@drawable/bkgrnd1"
        android:contentDescription="@string/descstartscreen"
        android:id="@+id/mainLogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />    
    <Button android:id="@+id/btnSingleGame"
    	android:layout_height="wrap_content"  
    	android:layout_width="wrap_content"
    	android:background="@drawable/singleplayer"
    	android:layout_alignParentRight="true"
    	android:layout_alignParentTop="true"
    	android:layout_marginTop="50dp"
    	android:layout_marginRight="10dp" />
	<Button android:id="@+id/btnMultiplayer"
		android:background="@drawable/multiplayer"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="50dp"
		android:layout_marginRight="10dp" />
	
</RelativeLayout>